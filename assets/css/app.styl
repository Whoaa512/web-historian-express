@import 'lib/bootstrap/bootstrap.styl' // bootstrap-stylus
@import 'nib'
.container
  margin-top 60px

h2
  smooth-button()
  width: 90%
  font-size: 2em

h3
  margin-top: 20px
pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

body
  margin : 0px
  font-family: arial, sans-serif

span
  display: inline-block


.addSite
  width: 100%
  min-height: 8%
  position: fixed
  text-align: center
  background-color: gray

#queueSite
  padding-left: 1em

.main
  width: 100%
  min-height: 800px
  padding-top: 4.7%


.sidebar
  float: left
  height: 100%
  width: 20%
  background-color: lightblue
  margin-top: 50px
  min-height: 800px

.archiveViewPort
  width: 75%
  margin-left: 20px
  min-height: 800px
  margin-top: 50px


iframe
  width: 100%
  border: 0px
  height: 100%
  min-height: 800px

ul
  list-style: none
  margin-left: 0
  padding-left: 0

li
  padding-left: 1em
  text-indent: -1em


li:before
  content: "+"
  padding-right: 5px

.liVersion:before
  content: ""
  padding-right:5px
